		Début
		entier n, i, somme;
		i <-- 0;
		somme <-- 0;

		écrire ("Veuillez saisir un nombre :");
		n <-- lire ;

		Tant que (i <= n) 
			somme <-- somme + i;
			i++;
		Fin Tant que 
		
		écrire (" Le résultat avec Tant que est : " , somme);
		Fin
